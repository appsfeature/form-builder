<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/date_input_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/margin_between_fields"
        android:background="@drawable/pre_bg_shape_select_steam"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Select Date"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingBottom="4dp"
            android:layout_marginLeft="16dp"
            android:paddingTop="2dp"
            android:src="@drawable/pre_ic_action_down"
            app:tint="@color/themeHintColor" />

    </LinearLayout>


</LinearLayout>